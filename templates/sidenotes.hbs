{{#extend "index"}}
{{#content "content"}}
<article>
{{#if notes}}
    | {{#each notes}}
    {{url}}&nbsp;&nbsp;<a href="/sidenotes/{{url}}">{{{title}}}</a> |
    {{/each}}
{{else}}
<p>Нет заметок</p>
{{/if}}
</article>
<hr>
<div class="row">
    <div class="col-12">
        <a style="display: block; text-align: center;" href="/">На главную</a>
    </div>
</div>
{{/content}}
{{/extend}}